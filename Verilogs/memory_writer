module ram_writer(
  input [191:0] instructions,
  input [2:0] quantity
);

  reg [31:0] ram [0:1023]; // 1024 bytes
  reg [9:0] cursor = 0; // 0 to 1023
  integer i;

  always @(*)
    begin
      for (i = 1; i <= quantity; i = i + 1)
        begin
          ram[cursor] = instructions[(i * 32) - 1:(i - 1) * 32];
          cursor = cursor + 1'b1;
        end
    end

endmodule